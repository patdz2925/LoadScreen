local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "PersistentLoadingScreen"
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Main Frame
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 400, 0, 120)
frame.Position = UDim2.new(0.5, -200, 0.5, -60)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BorderSizePixel = 0
Instance.new("UICorner", frame)

-- Title
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 5)
title.Text = "[SUMMER] Pacide's Pet Spawner"
title.Font = Enum.Font.FredokaOne
title.TextColor3 = Color3.new(1, 1, 1)
title.TextSize = 16
title.BackgroundTransparency = 1

-- Subtitle
local subtitle = Instance.new("TextLabel", frame)
subtitle.Size = UDim2.new(1, 0, 0, 20)
subtitle.Position = UDim2.new(0, 0, 0, 30)
subtitle.Text = "Loading... please wait"
subtitle.Font = Enum.Font.Gotham
subtitle.TextColor3 = Color3.fromRGB(200, 200, 200)
subtitle.TextSize = 13
subtitle.BackgroundTransparency = 1

-- Progress Text
local percentageLabel = Instance.new("TextLabel", frame)
percentageLabel.Size = UDim2.new(1, 0, 0, 20)
percentageLabel.Position = UDim2.new(0, 0, 0, 50)
percentageLabel.Text = "0%"
percentageLabel.Font = Enum.Font.GothamBold
percentageLabel.TextColor3 = Color3.fromRGB(100, 200, 255)
percentageLabel.TextSize = 14
percentageLabel.BackgroundTransparency = 1

-- Progress Bar Background
local progressBarBG = Instance.new("Frame", frame)
progressBarBG.Size = UDim2.new(0.9, 0, 0, 10)
progressBarBG.Position = UDim2.new(0.05, 0, 1, -25)
progressBarBG.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
progressBarBG.BorderSizePixel = 0
Instance.new("UICorner", progressBarBG)

-- Progress Bar Fill
local progressBarFill = Instance.new("Frame", progressBarBG)
progressBarFill.Size = UDim2.new(0, 0, 1, 0)
progressBarFill.Position = UDim2.new(0, 0, 0, 0)
progressBarFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
progressBarFill.BorderSizePixel = 0
Instance.new("UICorner", progressBarFill)

-- Animate Progress (30 seconds)
local totalDuration = 30
for i = 1, 100 do
	task.wait(totalDuration / 100)
	percentageLabel.Text = tostring(i) .. "%"
	progressBarFill.Size = UDim2.new(i / 100, 0, 1, 0)
end

-- After complete, show rotating loading circle
progressBarBG.Visible = false
progressBarFill.Visible = false
percentageLabel.Visible = false
subtitle.Text = "Please wait for the script to load..."

-- Loading circle
local loadingCircle = Instance.new("ImageLabel", frame)
loadingCircle.Image = "rbxassetid://7733960981" -- Roblox spinner icon
loadingCircle.Size = UDim2.new(0, 24, 0, 24)
loadingCircle.Position = UDim2.new(0.5, -12, 1, -28)
loadingCircle.BackgroundTransparency = 1

-- Rotation loop
task.spawn(function()
	while true do
		loadingCircle.Rotation += 5
		task.wait(0.03)
	end
end)
